<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_imvIcon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/contentdes"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_txvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:textColor="#A0A0A0"
                android:textSize="14sp"
                tools:text="Song:" />

            <TextView
                android:id="@+id/notification_txvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#A0A0A0"
                android:textSize="18sp"
                tools:text="SongName" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/notification_ibtnPlay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/contentdes"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:srcCompat="@drawable/ic_play_arrow_black_48dp" />

        <ImageButton
            android:id="@+id/notification_ibtnStop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/contentdes"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:srcCompat="@drawable/ic_stop_black_48dp" />

        <ImageButton
            android:id="@+id/notification_ibtnNext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/contentdes"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:srcCompat="@drawable/ic_skip_next_black_48dp" />
    </LinearLayout>
</LinearLayout>